<div>
  <%= link_to "Go to Update my Password", edit_user_registration_path, :class => "btn btn-default" %>
</div>

<h1>Add a picture to your profile</h1>

<%= simple_form_for @user, url: edit_path, html: { :multipart => true } do |f| %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :username %> <span>(has to be unique)</span>
  </div>
  <div class="form-group">
    <%= f.label "picture upload" %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>


